{
    "name": "prisma-api",
    "version": "0.0.0",
    "description": "Simple Prisma API with GraphQL",
    "main": "src/index.ts",
    "author": {
        "name": "Lucas Vidor Migotto",
        "email": "lvmigotto1@gmail.com"
    },
    "license": "MIT",
    "private": false,
    "scripts": {
        "start:dev": "ts-node-dev -r dotenv/config --transpile-only --no-notify --exit-child src/index.ts",
        "generate:schema": "ts-node --transpile-only src/schema",
        "lint": "ts-standard"
    },
    "devDependencies": {
        "ts-node-dev": "^1.1.8",
        "ts-standard": "^11.0.0",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "apollo-server": "^3.7.0",
        "dotenv": "^16.0.0",
        "graphql": "^16.5.0",
        "nexus": "^1.3.0"
    },
    "ts-standard": {
        "ignore": [
            "dist",
            "nexus-typegen.ts"
        ]
    }
}
